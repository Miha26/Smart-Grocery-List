<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Chicken_Lemon">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chicken Lemon"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:padding="20dp"
            android:textStyle="bold"
            android:textSize="26sp"/>

        <ImageView

            android:id="@+id/image_chickenlemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/pui_lamaie" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="20dp"
            android:text="
            Ingredients:\n
            chicken breast\n
            Sweet potatoes\n
            Lemon\n
            Salt\n
            Pepper\n
            Oregano\n
            Rosemary"/>
        <TextView
            android:padding="20dp"
            android:layout_width="420dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Preparation:\n
        Put the potatoes in the oven seasoned with salt and oregano\n
        Season the chicken with salt and pepper\n
        The chicken is precooked in a pan in lemon sauce for 10 minutes\n
        Place in the tray with lemon and orange slices and a sprig of rosemary for 10 minutes at 180 degrees\n"/>
    </LinearLayout>


</LinearLayout>