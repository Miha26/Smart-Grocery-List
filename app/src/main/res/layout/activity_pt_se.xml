<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Pt_SE">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to Items Store!"
            android:padding="20dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select the desired products  and the press the button down bellow to buy them."
            android:padding="20dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <Button
                android:id="@+id/singup_button"
                android:layout_width="340dp"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:background="@drawable/border"
                android:text="Speed Boost - Price: 100 coins"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                />
            <Button
                android:id="@+id/singup_button"
                android:layout_width="340dp"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:background="@drawable/border"
                android:text="Extra Life - Price: 75 coins"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                />
            <Button
                android:id="@+id/singup_button"
                android:layout_width="340dp"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:background="@drawable/border"
                android:text="Power-up Magnet - Price: 50 coins"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"

                />
            <Button
                android:id="@+id/singup_button"
                android:layout_width="340dp"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:background="@drawable/border"
                android:text="Shield Protection - Price: 90 coins"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"

                /> <Button
            android:id="@+id/singup_button"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:background="@drawable/border"
            android:text="Bonus Fruit - Price: 30 coins"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"

            /> <Button
            android:id="@+id/singup_button"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:background="@drawable/border"
            android:text="Invisibility Potion - Price: 80 coins"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"

            />
            <Button
                android:id="@+id/singup_button"
                android:layout_width="340dp"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:background="@drawable/border"
                android:text="BUY!"
                android:textColor="@color/red"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"

                />








        </LinearLayout>
    </LinearLayout>
</LinearLayout>