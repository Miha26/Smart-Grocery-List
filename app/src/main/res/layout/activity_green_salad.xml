<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Green_Salad">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Green Salad"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:padding="20dp"
            android:textStyle="bold"
            android:textSize="26sp"/>

        <ImageView

            android:id="@+id/image_greensalad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/salata_green" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="20dp"
            android:text="Ingredients:\n
            Tomatoes\n
            Cucumbers\n
            Rucola\n
            Baby spinach\n
            Cottage cheese\n
            Bread\n
            Oregano\n
            Salt\n"
            />
        <TextView
            android:padding="20dp"
            android:layout_width="420dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Preparation:\n
    Chop the tomatoes, cucumbers, rucola, spinach and cheese.\n
    Tomatoes and cucumbers are added alternately\n
    On top, add arugula and baby spinach and cheese on top of them\n
    And at the end it is seasoned with a little oregano\n
    A few slices of toast\n
    And that's it\n"/>
    </LinearLayout>


</LinearLayout>