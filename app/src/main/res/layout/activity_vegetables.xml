<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vegetables">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:padding="20dp"
                android:text="Welcome to your vegetables  list!"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Check in your vegetables ;)) "
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <CheckBox
                android:id="@+id/ginger_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ginger"
                android:layout_gravity="center_horizontal"
                />

            <CheckBox
                android:id="@+id/cabbage_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cabbage"
                android:layout_gravity="center_horizontal"
                />

            <CheckBox
                android:id="@+id/eggplant_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eggplant"
                android:layout_gravity="center_horizontal"
                />

            <CheckBox
                android:id="@+id/carrot_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carrot"
                android:layout_gravity="center_horizontal"
                />

            <CheckBox
                android:id="@+id/courgette_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Courgette"
                android:layout_gravity="center_horizontal"
                />

            <CheckBox
                android:id="@+id/broccoli_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Broccoli"
                android:layout_gravity="center_horizontal"
                />

            <CheckBox
                android:id="@+id/cauliflower_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cauliflower"
                android:layout_gravity="center_horizontal"
                />

            <CheckBox
                android:id="@+id/cucumber_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cucumber"
                android:layout_gravity="center_horizontal"
                />

            <CheckBox
                android:id="@+id/lettuce_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lettuce"
                android:layout_gravity="center_horizontal"
                />

            <CheckBox
                android:id="@+id/mushroom_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mushroom"
                android:layout_gravity="center_horizontal"
                />

            <CheckBox
                android:id="@+id/onion_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Onion"
                android:layout_gravity="center_horizontal"
                />

            <CheckBox
                android:id="@+id/peas_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Peas"
                android:layout_gravity="center_horizontal"
                />

            <CheckBox
                android:id="@+id/pepper_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pepper"
                android:layout_gravity="center_horizontal"
                />

            <CheckBox
                android:id="@+id/hot_pepper_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hot Pepper"
                android:layout_gravity="center_horizontal"
                />

            <CheckBox
                android:id="@+id/potato_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Potato"
                android:layout_gravity="center_horizontal"
                />

            <CheckBox
                android:id="@+id/pumpkin_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pumpkin"
                android:layout_gravity="center_horizontal"
                />

            <CheckBox
                android:id="@+id/tomato_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tomato"
                android:layout_gravity="center_horizontal"
                />

            <CheckBox
                android:id="@+id/radish_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Radish"
                android:layout_gravity="center_horizontal"
                />

            <CheckBox
                android:id="@+id/zucchini_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zucchini"
                android:layout_gravity="center_horizontal"
                />

            <CheckBox
                android:id="@+id/brussels_sprouts_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brussels Sprouts"
                android:layout_gravity="center_horizontal"
                />

            <CheckBox
                android:id="@+id/corn_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Corn"
                android:layout_gravity="center_horizontal"
                />

            <CheckBox
                android:id="@+id/sweet_potato_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sweet Potato"
                android:layout_gravity="center_horizontal"
                />

            <CheckBox
                android:id="@+id/garlic_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Garlic"
                android:layout_gravity="center_horizontal"
                />



        </LinearLayout>
    </ScrollView>
</LinearLayout>