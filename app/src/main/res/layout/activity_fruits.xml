<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fruits">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:padding="20dp"
                android:text="Welcome to your fruits list!"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Check in your fruits ;)) "
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <CheckBox
                android:id="@+id/apple_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apple"
                android:layout_gravity="center_horizontal"
                />
            <CheckBox
                android:id="@+id/banana_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Banana"
                android:layout_gravity="center_horizontal"/>
            <CheckBox
                android:id="@+id/grapes_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grapes"
                android:layout_gravity="center_horizontal"/>
            <CheckBox
                android:id="@+id/orange_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Orange"
                android:layout_gravity="center_horizontal"/>
            <CheckBox
                android:id="@+id/strawberry_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Srawberry"
                android:layout_gravity="center_horizontal"/>
            <CheckBox
                android:id="@+id/avocado_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Avocado"
                android:layout_gravity="center_horizontal"/>
            <CheckBox
                android:id="@+id/peach_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Peach"
                android:layout_gravity="center_horizontal"/>
            <CheckBox
                android:id="@+id/apricot_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apricot"
                android:layout_gravity="center_horizontal"/>
            <CheckBox
                android:id="@+id/raspberry_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Raspberry"
                android:layout_gravity="center_horizontal"/>
            <CheckBox
                android:id="@+id/blueberry_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blueberry"
                android:layout_gravity="center_horizontal"/>
            <CheckBox
                android:id="@+id/blackberry_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blackbery"
                android:layout_gravity="center_horizontal"/>
            <CheckBox
                android:id="@+id/cherry_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cherry"
                android:layout_gravity="center_horizontal"/>
            <CheckBox
                android:id="@+id/coconut_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coconut"
                android:layout_gravity="center_horizontal"/>
            <CheckBox
                android:id="@+id/dragon_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dragon Fruit"
                android:layout_gravity="center_horizontal"/>
            <CheckBox
                android:id="@+id/kiwi_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kiwi"
                android:layout_gravity="center_horizontal"/>
            <CheckBox
                android:id="@+id/lime_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lime"
                android:layout_gravity="center_horizontal"/>
            <CheckBox
                android:id="@+id/lemon_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lemon"
                android:layout_gravity="center_horizontal"/>
            <CheckBox
                android:id="@+id/mango_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mango"
                android:layout_gravity="center_horizontal"/>
            <CheckBox
                android:id="@+id/watermalon_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Watermelon"
                android:layout_gravity="center_horizontal"/>
            <CheckBox
                android:id="@+id/pear_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pear"
                android:layout_gravity="center_horizontal"/>
            <CheckBox
                android:id="@+id/pineaple_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pineaple"
                android:layout_gravity="center_horizontal"/>
            <CheckBox
                android:id="@+id/nuts_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nuts"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>